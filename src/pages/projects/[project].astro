---
import { Image } from "astro:assets";

import Layout from "../../layouts/Layout.astro";
import catImage from "../../assets/cat1.avif";

export async function getStaticPaths() {
  return [{ params: { project: "projet" } }];
}

const data = [
  "projet1",
  "projet2",
  "projet3",
  "projet4",
  "projet5",
  "projet6",
  "projet7",
  "projet8",
  "projet9",
  "projet10",
  "projet11",
  "projet12",
