      </div>
      <div>
        <Image src={catImage} alt="cat image" />
        <p class="text-xs mt-1">Flyer format 15 recto/verso</p>
      </div>
    </div>
  </div>
  <p class="text-lg md:text-sm mt-5">
    Design: Laurent Alleman <br />
    Photographies: Thomas Rousset <br />
    Illustrations: Pierre Andrey <br />
    Code: Franck Da Silva
  </p>
  <hr class="my-5" />
  <ul class="mb-5">
    <li>
      <span class="flex text-lg md:text-sm relative z-50 text-gray-400">
        <span class="grow">Audemars Piguet</span>
        <span class="grow hidden md:inline">Mémorendum Volontriat</span>
        <span class="grow hidden md:inline">
          DA, identité visuelle, Illustration, design editorial
        </span>
        <span>2022</span>
      </span>
    </li>
    {
      data.map((_, index) => (
        <li>
          <a class="flex text-lg md:text-sm relative z-50" href="#">
            <span class="grow">Audemars Piguet</span>
            <span class="grow hidden md:inline">Mémorendum Volontriat</span>
            <span class="grow hidden md:inline">
              DA, identité visuelle, Illustration, design editorial
            </span>
            <span>2022</span>
          </a>
        </li>
      ))
